<h1> Send an Alert</h1>

<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :"Board Member's Name" %><br>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :"Board Member's Email"%> <br>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :"Community Name"%> <br>
        <%= form.text_field :community %>
    </div>

    <div>
        <%= form.label :alert%> <br>
        <%= form.text_field :alert %>
    </div>

    <div> 
        <%= form.submit('Submit') %>
    </div>
    <button> Complain Instead </button>
<% end %>